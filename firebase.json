{
  "hosting": {
    "public": "dist/walletapp-frontend/browser",
    "ignore": ["**/.*", "**/node_modules/**"],

    "headers": [
      {
        "source": "**/index.html",
        "headers": [{ "key": "Cache-Control", "value": "no-cache" }]
      },
      {
        "source": "**/*.@(js|css)",
        "headers": [{ "key": "Cache-Control", "value": "public,max-age=31536000,immutable" }]
      }
    ],

    "redirects": [
      { "source": "/en", "destination": "/en/", "type": 301 },
      { "source": "/es", "destination": "/es/", "type": 301 }
    ],
    "rewrites": [
      { "source": "/en/**", "destination": "/en/index.html" },
      { "source": "/es/**", "destination": "/es/index.html" },
      { "source": "**",     "destination": "/es/index.html" }
    ]
  }
}
